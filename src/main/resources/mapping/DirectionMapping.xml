<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bugmaker.mapper.DirectionMapper">

    <resultMap id="direct_map" type="com.bugmaker.bean.Direction">

        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="describe" column="describe" />

        <association property="profession" javaType="com.bugmaker.bean.Profession">

            <id property="id" column="p_id" />
            <result property="name" column="p_name" />
            <result property="describe" column="p_describe" />

            <association property="dept" javaType="com.bugmaker.bean.Dept">

                <id property="id" column="dept_id" />
                <result property="deptName" column="dept_name"></result>
            </association>
        </association>
    </resultMap>

    <!-- 添加专业方向 -->
    <insert id="insertDirection" >
        insert into direction (
            id, name, profess_id
            <!--, describe-->
        )
        values(
            #{id}, #{name}, #{profession.id}
        <!--, #{describe}-->
        )
    </insert>

    <!-- 查询所有专业方向 -->
    <select id="selectDirectionByParam" resultMap="direct_map">
        SELECT
            d.*,
            p.id p_id, p.name p_name, p.profess_describe p_describe,
            dept.id dept_id, dept.dept_name
        FROM direction d, profession p, dept
        WHERE
        d.profess_id = p.id AND p.dept_id = dept.id

        <!--<if test="">-->
            <!---->
        <!--</if>-->
    </select>


</mapper>